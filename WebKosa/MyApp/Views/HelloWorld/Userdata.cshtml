    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>사용자 번호 : @Model.UserNo</h3>
<h3>사용자 이름 : @Model.UserName</h3>

<!--화면에 출력-->
@* 랜더링 되지 않는다 *@
@{var total = 10;}
@{var message = "hello world";}

<h3>this value is @total</h3>
