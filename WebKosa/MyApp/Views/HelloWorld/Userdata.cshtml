@{
    var g = "welcome";
    var w = DateTime.Now.DayOfWeek;
    var gw = g + " today is " + w;
}

<p>display @gw</p>

@{ var myFilePath = @"C:\MyFolder\"; }
<p>The path is: @myFilePath</p>

<table border="1">
    <tr>
        <td>Requested URL</td>
        <td>Relative Path</td>
        <td>Full Path</td>
        <td>HTTP Request Type</td>
    </tr>
    <tr>
        <td>@Request.Url</td>
        <td>@Request.FilePath</td>
        <td>@Request.MapPath(Request.FilePath)</td>
        <td>@Request.RequestType</td>
    </tr>
</table>

